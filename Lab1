    cout << "Array unsorted  " << str << endl;

    qs(str, 0, len - 1);
    cout << "Array sorted  " << str;
    _getch();*/
//======================================================================================
    otp << N << std::endl;
    for (const auto& d : data)
        otp << d.first << " " << d.second << std::endl;

    return 0;

}

void qs(struct *items.num, int left, int right) {
    int i, j;
    char x, y;

    i = left; j = right;
    x = items.num[(left + right) / 2];

    do {
        while ((items.num[i] < x) && (i < right)) i++;
        while ((x < items.num[j]) && (j > left)) j--;
        if (i <= j) {

            y = items.num[i];
            items.num[i] = items.num[j];
            items.num[j] = y;
            i++;
            j--;
        }
    } while (i <= j);
    if (left < j) qs(items.num, left, j);
    if (i < right) qs(items.num, i, right);

};
