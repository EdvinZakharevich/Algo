#include "pch.h"
#include <iostream>
#include <fstream>
#include <conio.h>
#include <clocale>
#include <cstring>

using namespace std;

void qs(char *items, int left, int right);

int main() {

    setlocale(LC_ALL, "Russian");

    char str[] = "321321321654654";
    int len = strlen(str);
    cout << "Array unsorted  " << str << endl;

    qs(str, 0, len - 1);
    cout << "Array sorted  " << str;
    _getch();
    
    return 0;

}

void qs(char *items, int left, int right) {
    int i, j;
    char x, y;

    i = left; j = right;
    x = items[(left + right) / 2];

    do {
        while ((items[i] < x) && (i < right)) i++;
        while ((x < items[j]) && (j > left)) j--;
        if (i <= j) {

            y = items[i];
            items[i] = items[j];
            items[j] = y;
            i++;
            j--;
        }
    } while (i <= j);
    if (left < j) qs(items, left, j);
    if (i < right) qs(items, i, right);

};
